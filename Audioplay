//javascript
console.log("Wellcome to MyMusic");

let songIndex = 0;
let masterPlay = document.getElementById("masterPlay");
let myProgerssbar = document.getElementById("myprogressbar");
let opac = document.getElementById("opac");
let audioElement = new Audio("1.mp3");
let mastersonginfo = document.getElementById("mastersonginfo");
let songItems = Array.from(document.getElementsByClassName("songitem"));

let songs = [
  { songName: "Ram Siya Ram", filePath: "F://Web_development//music_app//music//_Ram Siya Ram(PagalWorld.com.se).mp3", coverPath: "F:/Web_development/music_app/images/Ram_siya_ram.jpg" },
  { songName: "Bad Boy", filePath: "F:/Web_development/music_app/music/Bad Boy(PagalWorld.com.se).mp3", coverPath: "F:/Web_development/music_app/images/bad_boy.jpg" },
  { songName: "Catch if you can", filePath: "F:/Web_development/music_app/music/Catch Me If You Can(PagalWorld.com.se).mp3", coverPath: "F:/Web_development/music_app/images/ciyc.jpg" },
  {songName: "Chaleya",filePath: "F:/Web_development/music_app/music/Chaleya(PagalWorld.com.se).mp3",coverPath: "F:/Web_development/music_app/images/chel.jpg",},
  { songName: "Drive Forever", filePath: "F:/Web_development/music_app/music/Drive forever (T3NZU Remix)(PagalWorld.com.se).mp3", coverPath: "F:/Web_development/music_app/images/df.jpg" },
  { songName: "In to Your Arms", filePath: "F:/Web_development/music_app/music/Into Your Arms(PagalWorld.com.se).mp3", coverPath: "F:/Web_development/music_app/images/iya.jpg" },
  { songName: "Let Me Down Slowly", filePath: "F:/Web_development/music_app/music/Let Me Down Slowly(PagalWorld.com.se).mp3", coverPath: "F:/Web_development/music_app/images/lds.jpg" },
  { songName: "Let Me Love You", filePath: "F:/Web_development/music_app/music/Let Me Love You(PagalWorld.com.se).mp3", coverPath: "F:/Web_development/music_app/images/lly.jpg" },
  { songName: "Paradise", filePath: "F:/Web_development/music_app/music/Paradise(PagalWorld.com.se).mp3", coverPath: "F:/Web_development/music_app/images/paradise.jpg" },
  { songName: "Sorry", filePath: "F:/Web_development/music_app/music/Sorry(PagalWorld.com.se).mp3", coverPath: "F:/Web_development/music_app/images/sorry.jpg" },
];

songItems.forEach((element, i) => {
  element.querySelector("img").src = songs[i].coverPath;
  element.querySelector(".songName").innerText = songs[i].songName;
});

const playorpause = () => {
  if (audioElement.paused || audioElement.currentTime == 0) {
    audioElement.play();
    masterPlay.classList.remove("fa-play-circle");
    masterPlay.classList.add("fa-pause-circle");
    opac.style.opacity = 1;
    document.getElementById(songIndex).classList.remove("fa-play-circle");
    document.getElementById(songIndex).classList.add("fa-pause-circle");
  } else {
    audioElement.pause();
    masterPlay.classList.remove("fa-pause-circle");
    masterPlay.classList.add("fa-play-circle");
    opac.style.opacity = 0;
    document.getElementById(songIndex).classList.remove("fa-pause-circle");
    document.getElementById(songIndex).classList.add("fa-play-circle");
  }
};
masterPlay.addEventListener("click", playorpause);
document.addEventListener("keydown", function (x) {
  if (x.key === " ") {
    playorpause();
  }
});
audioElement.addEventListener("timeupdate", () => {
  myProgerssbar.value = 0;
  let progress = parseFloat(
    (audioElement.currentTime / audioElement.duration) * 100
  );
  myProgerssbar.value = progress;
});
myProgerssbar.addEventListener("change", () => {
  audioElement.currentTime =
    (myProgerssbar.value * audioElement.duration) / 100;
});

const makeallpause = () => {
  Array.from(document.getElementsByClassName("songitemplay2")).forEach(
    (element) => {
      element.classList.remove("fa-pause-circle");
      element.classList.add("fa-play-circle");
    }
  );
};

Array.from(document.getElementsByClassName("songitemplay2")).forEach(
  (element) => {
    element.addEventListener("click", (e) => {
      makeallpause();
      songIndex = parseInt(e.target.id);
      if (audioElement.paused) {
        e.target.classList.remove("fa-play-circle");
        e.target.classList.add("fa-pause-circle");
        opac.style.opacity = 1;
        audioElement.src = `${songIndex}.mp3`;
        audioElement.play();
        masterPlay.classList.remove("fa-play-circle");
        masterPlay.classList.add("fa-pause-circle");
        mastersonginfo.innerText = songs[songIndex - 1].songName;
        audioElement.currentTime = 0;
      } else {
        e.target.classList.add("fa-play-circle");
        e.target.classList.remove("fa-pause-circle");
        opac.style.opacity = 0;
        audioElement.src = `${songIndex}.mp3`;
        audioElement.pause();
        masterPlay.classList.add("fa-play-circle");
        masterPlay.classList.remove("fa-pause-circle");
        mastersonginfo.innerText = songs[songIndex - 1].songName;
        audioElement.currentTime = 0;
      }
    });
  }
);
let next = () => {
  if (songIndex > 9) {
    songIndex = 1;
  } else {
    songIndex += 1;
  }
  audioElement.src = `${songIndex}.mp3`;
  audioElement.currentTime = 0;
  audioElement.play();
  masterPlay.classList.remove("fa-play-circle");
  masterPlay.classList.add("fa-pause-circle");
  makeallpause();
  document.getElementById(songIndex).classList.remove("fa-play-circle");
  document.getElementById(songIndex).classList.add("fa-pause-circle");
  mastersonginfo.innerText = songs[songIndex - 1].songName;
  opac.style.opacity = 1;
};
document.getElementById("next").addEventListener("click", next);
document.addEventListener("keydown", function (x) {
  if (x.key === "ArrowRight") {
    next();
  }
});

let previous = () => {
  if (songIndex <= 1) {
    songIndex = 10;
  } else {
    songIndex -= 1;
  }
  audioElement.src = `${songIndex}.mp3`;
  audioElement.currentTime = 0;
  audioElement.play();
  masterPlay.classList.remove("fa-play-circle");
  masterPlay.classList.add("fa-pause-circle");
  makeallpause();
  document.getElementById(songIndex).classList.remove("fa-play-circle");
  document.getElementById(songIndex).classList.add("fa-pause-circle");
  mastersonginfo.innerText = songs[songIndex - 1].songName;
  opac.style.opacity = 1;
};
document.getElementById("previous").addEventListener("click", previous);
document.addEventListener("keydown", function (x) {
  if (x.key === "ArrowLeft") {
    previous();
  }
});

audioElement.addEventListener("ended", () => {
  if (songIndex > 9) {
    songIndex = 1;
  } else {
    songIndex += 1;
  }
  audioElement.src = `${songIndex}.mp3`;
  audioElement.currentTime = 0;
  audioElement.play();
  masterPlay.classList.remove("fa-play-circle");
  masterPlay.classList.add("fa-pause-circle");
  makeallpause();
  document.getElementById(songIndex).classList.remove("fa-play-circle");
  document.getElementById(songIndex).classList.add("fa-pause-circle");
  mastersonginfo.innerText = songs[songIndex - 1].songName;
  opac.style.opacity = 1;
});
